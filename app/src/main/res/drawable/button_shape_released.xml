<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#80BBC1C7" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="200%p"
                android:startColor="#EBF6FF"
                android:endColor="#1A2A4D6A" />

            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <!-- over top shadow -->
        <shape android:shape="rectangle">
            <gradient
                android:angle="-90"
                android:centerColor="#00FF0000"
                android:centerY="0.9"
                android:endColor="#EBF6FF"
                android:startColor="#1A2A4D6A"
                android:type="linear" />

            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <!-- over bottom shadow -->
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#00FF0000"
                android:centerY="0.9"
                android:endColor="#EBF6FF"
                android:startColor="#1A2A4D6A"
                android:type="linear" />

            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>